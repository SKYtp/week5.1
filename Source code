#include<stdio.h>
#include<string.h>
int main() {
	char word[100];
	int i = 0, x, n, j;
	printf("Enter string : ");
	scanf("%s", word);
	printf("\n-------------------------------\n");
	n = strlen(word);
	j = n;
	while (n >= 0) {
		while (i < j) {
			printf("%c", word[i]);
			i++;
		}
		printf("\n");
		j -= 1;
		n--;
		i = 0;
	}
	return 0;
}
